
all:
	nvcc template.cu -O3 -o ex3 -I../libwb/ ../libwb/lib/libwb.a
#	nvcc solution.cu -O3 -o ex3 -I../libwb/ ../libwb/lib/libwb.a
	g++ dataset_generator.cpp -O3 -o generator -I../libwb/ ../libwb/lib/libwb.a

gen:
	./generator

run0:
	./ex3 -e ImageColorToGrayscale/Dataset/0/output.pbm -i ImageColorToGrayscale/Dataset/0/input.ppm -t image

run1:
	./ex3 -e ImageColorToGrayscale/Dataset/1/output.pbm -i ImageColorToGrayscale/Dataset/1/input.ppm -t image

run2:
	./ex3 -e ImageColorToGrayscale/Dataset/2/output.pbm -i ImageColorToGrayscale/Dataset/2/input.ppm -t image

run3:
	./ex3 -e ImageColorToGrayscale/Dataset/3/output.pbm -i ImageColorToGrayscale/Dataset/3/input.ppm -t image

run4:
	./ex3 -e ImageColorToGrayscale/Dataset/4/output.pbm -i ImageColorToGrayscale/Dataset/4/input.ppm -t image

run5:
	./ex3 -e ImageColorToGrayscale/Dataset/5/output.pbm -i ImageColorToGrayscale/Dataset/5/input.ppm -t image

prof:
#	Insert command generated by Nvidia Nsight Compute to profile your solution
	@echo "Edit Makefile: Insert command generated by Nvidia Nsight Compute to profile your solution."


clean:
	rm -f ex3 generator
